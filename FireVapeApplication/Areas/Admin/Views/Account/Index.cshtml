@model FireVapeApplication.ViewModels.UserVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9 col-11">
            <div class="card shadow-lg bg-secondary">
                <div class="card-header">

                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account"))
                    {
                        <div class="text-warning lead text-center mb-3">
                            @Html.ValidationMessage("Model")
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                @Html.LabelFor(m => m.Username, new { @class = "input-group-text" })
                            </div>
                            @Html.EditorFor(m => m.Username, new { @class = "form-control" })
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                @Html.LabelFor(m => m.Password, new { @class = "input-group-text" })
                            </div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div>
                            <input type="submit" value="Войти" />
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <p class="lead h-5 text-center text-white-50">
                        Copyright © <strong class="text-white">FireVape</strong>, 2017-@DateTime.Now.Year. Все права защищены.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>