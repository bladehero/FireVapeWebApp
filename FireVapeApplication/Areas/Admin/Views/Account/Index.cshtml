@model FireVapeApplication.ViewModels.UserVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .input-group-text {
        width: 105px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10 col-12">
            <div class="card shadow-lg bg-secondary">
                <div class="card-header">
                    <p class="display-3 text-white text-center">FireVape</p>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account", new { @area = "Admin" }))
                    {
                        <div class="text-warning lead text-center mb-3">
                            @Html.ValidationMessage("Model")
                        </div>
                        <div class="input-group input-group-lg mb-3">
                            <div class="input-group-prepend">
                                @Html.LabelFor(m => m.Username, new { @class = "input-group-text", @id = "inputGroup-sizing-lg" })
                            </div>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="Username">
                        </div>
                        <div class="input-group input-group-lg mb-3">
                            <div class="input-group-prepend">
                                @Html.LabelFor(m => m.Password, new { @class = "input-group-text", @id = "inputGroup-sizing-lg" })
                            </div>
                            <input type="password" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="Password">
                        </div>
                        <div class="row justify-content-center">
                            <button type="submit" class="btn btn-lg btn-outline-light">Войти в систему</button>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <p class="lead h-5 text-center text-white-50">
                        Copyright © <strong class="text-white">FireVape</strong>, 2017-@DateTime.Now.Year.<br /> Все права защищены.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>